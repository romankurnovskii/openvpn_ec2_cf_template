{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "InstanceType": {
      "Default": "t3a.nano",
      "Type": "String",
      "ConstraintDescription": "must be a valid EC2 instance type.",
      "Description": "EC2 instance type",
      "AllowedValues": ["t3a.nano"]
    }
  },
  "Description": "Create a new EC2 instance and give VPN access.",
  "Resources": {
    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        "SecurityGroups": [
          {
            "Ref": "InstanceSecurityGroup"
          }
        ],
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "LaunchTemplate": {
          "Version": "1",
          "LaunchTemplateId": {
            "Ref": "LaunchTemplate"
          }
        },
        "ImageId": {
          "Fn::FindInMap": [
            "AWSRegionArch2AMI",
            {
              "Ref": "AWS::Region"
            },
            {
              "Fn::FindInMap": [
                "AWSInstanceType2Arch",
                {
                  "Ref": "InstanceType"
                },
                "Arch"
              ]
            }
          ]
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "set -eux\n",
                "apt-get update && apt-get install python3-pip --assume-yes\n",
                "pip3 install https://s3.amazonaws.com/cloudformation-examples/aws-cfn-bootstrap-py3-latest.tar.gz\n",
                "git clone https://github.com/romankurnovskii/openvpn_ec2_cf_template.git /home/ubuntu/openvpn_ec2_cf\n",
                "cd /home/ubuntu/openvpn_ec2_cf\n",
                "./setup_ec2.sh ",
                { "Ref": "S3Bucket" },
                " ",
                { "Ref": "IPAddress" },
                "\n",
                "/usr/local/bin/cfn-signal --stack ",
                { "Ref": "AWS::StackName" },
                " --resource EC2Instance --region ",
                { "Ref": "AWS::Region" },
                " \n"
              ]
            ]
          }
        },
        "Tags": [
          {
            "Key": "openvpn_ec2_cf",
            "Value": "true"
          }
        ]
      },
      "CreationPolicy": {
        "ResourceSignal": {
          "Timeout": "PT35M"
        }
      }
    },
    "LaunchTemplate": {
      "Type": "AWS::EC2::LaunchTemplate",
      "Properties": {
        "LaunchTemplateData": {
          "InstanceMarketOptions": {
            "SpotOptions": {
              "SpotInstanceType": "persistent",
              "InstanceInterruptionBehavior": "stop"
            },
            "MarketType": "spot"
          }
        }
      }
    },
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        },
        "Tags": [
          {
            "Key": "openvpn_ec2_cf",
            "Value": "true"
          }
        ]
      }
    },
    "InstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          {
            "Ref": "Role"
          }
        ]
      }
    },
    "Role": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "Policies": [
          {
            "PolicyName": "OpenVPNClientKeyS3",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": ["s3:PutObject", "s3:GetObject", "s3:ListObject"],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          {
                            "Fn::GetAtt": ["S3Bucket", "Arn"]
                          },
                          "/*"
                        ]
                      ]
                    }
                  ],
                  "Effect": "Allow",
                  "Sid": "VisualEditor0"
                }
              ]
            }
          },
          {
            "PolicyName": "SSMManagedInstancePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Action": [
                    "ssm:UpdateInstanceInformation",
                    "ssmmessages:CreateControlChannel",
                    "ssmmessages:CreateDataChannel",
                    "ssmmessages:OpenControlChannel",
                    "ssmmessages:OpenDataChannel"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                }
              ]
            }
          }
        ],
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": ["sts:AssumeRole"],
              "Effect": "Allow",
              "Principal": {
                "Service": ["ec2.amazonaws.com"]
              }
            }
          ]
        },
        "Tags": [
          {
            "Key": "openvpn_ec2_cf",
            "Value": "true"
          }
        ]
      }
    },
    "IPAssoc": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "InstanceId": {
          "Ref": "EC2Instance"
        },
        "EIP": {
          "Ref": "IPAddress"
        }
      }
    },
    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "SecurityGroupIngress": [
          {
            "ToPort": 1194,
            "FromPort": 1194,
            "IpProtocol": "udp",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "ToPort": 22,
            "FromPort": 22,
            "IpProtocol": "tcp",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "GroupDescription": "Enable VPN access via UDP port 1194 and SSH access on port 22",
        "Tags": [
          {
            "Key": "openvpn_ec2_cf",
            "Value": "true"
          }
        ]
      }
    },
    "IPAddress": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Tags": [
          {
            "Key": "openvpn_ec2_cf",
            "Value": "true"
          }
        ]
      }
    }
  },
  "Mappings": {
    "AWSInstanceType2Arch": {
      "t3a.nano": {
        "Arch": "HVM64"
      }
    },
    "AWSRegionArch2AMI": {
      "eu-west-1": {
        "HVM64": "ami-04c58523038d79132"
      }
    }
  },
  "Outputs": {
    "ClientConfigurationUrl": {
      "Description": "URL to the VPN client configuration/key lima to download",
      "Value": {
        "Fn::Join": [
          "/",
          [
            "https://s3.console.aws.amazon.com/s3/object",
            {
              "Ref": "S3Bucket"
            },
            "client.ovpn"
          ]
        ]
      }
    }
  }
}
